<Page x:Class="MyPrac3.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1" FontFamily="Candara" FontSize="14">

    <Grid>
        <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите двузначное число:" Margin="16" FontWeight="Bold"/>
            <TextBox x:Name="chislo" Margin="16" Width="60" Height="22"/>
            <Button Content="Решить" Height="32" Width="55" Click="Button_Click"/>
            <TextBox x:Name="Answer" Margin="16" Width="150" Height="32" IsReadOnly="True"/>
        </StackPanel>
    </Grid>
</Page>
