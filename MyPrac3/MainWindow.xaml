<Window x:Class="MyPrac3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyPrac3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="FirstPageButton" Width="30" Click="FirstPageButton_Click">1</Button>
            <Button x:Name="TwoPageButton" Width="30" Click="TwoPageButton_Click">2</Button>
            <Button x:Name="ThreePageButton" Width="30" Click="ThreePageButton_Click">3</Button>
            <Button x:Name="FivePageButton" Width="30" Click="FivePageButton_Click">5</Button>
            <TextBlock Text="Дополнительные задания:" VerticalAlignment="Center" FontSize="14"/>
            <Button x:Name="Dop1PageButton" Width="45" Click="Dop1PageButton_Click">Доп1</Button>
            <Button x:Name="Dop2PageButton" Width="45" Click="Dop2PageButton_Click">Доп2</Button>
        </StackPanel>
        <Frame Grid.Row="1" x:Name="MyFrame"></Frame>
    </Grid>
</Window>
