<Page x:Class="MyPrac3.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyPrac3"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3" FontFamily="Candara" FontSize="14">

    <Grid>
        <ScrollViewer>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Введите число A:" Margin="12" FontWeight="Bold"/>
                <TextBox x:Name="inputA" Margin="16" Width="50" Height="22"/>
                <TextBlock Text="Введите число B:" Margin="16" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="inputB" Margin="16" Height="22" Width="50"/>
                <TextBlock Text="Введите число C:" Margin="16" HorizontalAlignment="Center" FontWeight="Bold"/>
                <TextBox x:Name="inputC" Margin="16" Height="22" Width="50"/>

                <Button Content="Вывести" Click="Button_Click"  Width="70" Height="32" Margin="16"/>
                <TextBox x:Name="Answer" Margin="16" Height="42" IsReadOnly="True"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
